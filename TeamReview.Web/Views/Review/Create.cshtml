@model TeamReview.Web.Models.ReviewConfiguration
@using TeamReview.Web.Models

@{
    ViewBag.Title = "Create Review";
}

<h2>Create Review</h2>

@*@{ Html.RenderPartial("CreateOrEdit"); }*@

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ReviewConfiguration</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div id="categories">
        </div>
        @Html.ActionLink("Add Category", "AddCategory", null, new { id = "addCategory" })

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            var nextCategory = 0;
            $("#addCategory").on('click', function (ev) {
                ev.preventDefault();
                $.ajax({
                    url: this.href,
                    cache: false
                }).done(function (html) {
                    var newName = 'Categories[' + nextCategory + '].Name';
                    var newDescription = 'Categories[' + nextCategory + '].Description';
                    var $modifiedHtml = $(html)
                        .find('#Name').attr('name', newName).attr('id', newName).end()
                        .find('#Description').attr('name', newDescription).attr('id', newDescription).end()
                        .find('label[for=Name]').attr('for', newName).end()
                        .find('label[for=Description]').attr('for', newDescription).end();
                    $("#categories").append($modifiedHtml);
                    nextCategory++;
                });
            });
        });
    </script>
}
