<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/content/jquery.jqplot.css" type="text/css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Oleo+Script:400,700|Allan:400,700|Carter+One|Open+Sans' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="/content/img/favicon.ico" type="image/x-icon" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
    <script src="http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js"></script>
    <script src="/content/scripts/jquery.jqplot.min.js" type="text/javascript"></script>
    <script src="/content/scripts/jqplot.categoryAxisRenderer.min.js" type="text/javascript"></script>
    <script src="/content/scripts/jqplot.pointLabels.min.js" type="text/javascript"></script>
    <script src="/content/scripts/jqplot.barRenderer.min.js" type="text/javascript"></script>
    <script src="/content/scripts/jquery.toc.min.js" type="text/javascript"></script>
    
    
</head>
<body>
    <header class="header">
        <div class="container">
            <a class="logo" href="@Url.Action("Index", "Home")">
                <img class="lg10" src="/content/img/teamreview-logo.png" alt="teamreview logo - stack ranking chart"/>
                <span class="lg11">Team</span>            
                <span class="lg12">Review</span>            
            </a>
            @Html.Partial("_LoginPartial")
        </div>
    </header>
    <div class="container well">
        @RenderBody()
    </div>    
    
    @RenderSection("scripts", required: false)    

    <!-- funzt irgendwie nur an, aber nicht ausschalten :( -->
    <script type="text/javascript">
        $(function () {
            $(window).scroll(function (ev) {
                var docPosition = $(window).scrollTop();
                if (docPosition === 0) {
                    $('.header').removeClass('shadow-bot');
                }
                else {
                    $('.header').addClass('shadow-bot');
                };
            });
        });
    </script>
    
    <!-- anzeige tooltips -->
    <script type="text/javascript">
        $("[title]").tooltip({ position: "bottom center", effect: "fade", delay: 500 });
    </script>

    <!-- UserVoice JavaScript SDK (only needed once on a page) -->
    <script>    (function () { var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true; uv.src = '//widget.uservoice.com/NRmCM28kVR8KFWaKPj2Q.js'; var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s) })()</script>

    <!-- A tab to launch the Classic Widget -->
    <script>
        UserVoice = window.UserVoice || [];
        UserVoice.push(['showTab', 'classic_widget', {
            mode: 'full',
            primary_color: '#62c462',
            link_color: '#007acc',
            default_mode: 'support',
            forum_id: 205144,
            tab_label: 'Feedback & Support',
            tab_color: '#62c462',
            tab_position: 'middle-left',
            tab_inverted: false
        }]);
    </script>

     
</body>
</html>

