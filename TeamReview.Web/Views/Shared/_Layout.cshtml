<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Oleo+Script:400,700|Allan:400,700|Carter+One|Open+Sans' rel='stylesheet' type='text/css'>
</head>
<body>
    <header>
        <div class="container">
            <a class="logo" href="@Url.Action("Index", "Home")"><span class="lg11">Team</span><span class="lg12">Review</span></a>
            <ul class="nav1">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>            
            </ul>          
            <div class="hd1">@Html.Partial("_LoginPartial")</div>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
